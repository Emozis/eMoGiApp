<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 모서리 반경 설정 -->
    <corners android:radius="20dp" />

    <!-- 배경색 설정 -->
    <solid android:color="@color/dark_blu" />

    <!-- 테두리 (optional) -->
    <stroke
        android:width="2dp"
        android:color="@color/black" /> <!-- 필요 시 테두리 색상과 두께를 설정 -->

    <!-- 패딩 설정 (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>