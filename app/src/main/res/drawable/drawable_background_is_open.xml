<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 노란색 배경 -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#ffffbb33" /> <!-- 선택된 상태의 색상 -->
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/white" />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- 기본 상태의 배경 -->
    <item>
        <shape>
            <solid android:color="@color/ai_chat" /> <!-- 기본 상태의 색상 -->
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/white" />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>