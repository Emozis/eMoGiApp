<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택된 상태의 스타일 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_default_background" />
            <stroke
                android:width="1dp"
                android:color="#FFD700" /> <!-- 노란색 테두리 -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- 기본 상태의 스타일 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_default_background" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" /> <!-- 흰색 테두리 -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>