<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택된 상태 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow" /> <!-- 내부 색상 설정 -->
            <corners android:radius="8dp" /> <!-- 둥근 모서리 설정 -->
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/text_view_character_create" /> <!-- 내부 색상 설정 -->
            <corners android:radius="8dp" /> <!-- 둥근 모서리 설정 -->
            <stroke
                android:width="1dp"
                android:color="@color/white" /> <!-- 테두리 설정 -->
        </shape>
    </item>
</selector>