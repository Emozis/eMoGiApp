<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼의 배경 색상 -->
    <solid android:color="@color/color_default_background" /> <!-- 기본 색상 -->

    <!-- 테두리 설정 -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" /> <!-- 하얀색 테두리 -->

    <!-- 둥근 모서리 (옵션) -->
    <corners android:radius="8dp" /> <!-- 모서리를 둥글게 하고 싶다면 추가 -->
</shape>